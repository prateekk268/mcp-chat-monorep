{
  "compilerOptions": {
    "target": "ES2020",                    
    "module": "commonjs",                  
    "rootDir": "src",                      
    "outDir": "./lib",                       
    "sourceRoot": "src",                   
    "strict": true,                        
    "moduleResolution": "node",
    "esModuleInterop": true,               
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true                      
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
